<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.darrensantana.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#e2000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/calculatorDisplay"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/txtDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textColor="#fff"
                android:textSize="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/calculatorKeyPad">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <Button
                        android:id="@+id/btnSquared"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/secondary_operation_button"
                        android:text="X^2"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        />

                    <Button
                        android:id="@+id/btnCubed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/secondary_operation_button"
                        android:text="X^3"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        />

                    <Button
                        android:id="@+id/btnSquareRoot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/secondary_operation_button"
                        android:text="2√"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        />

                    <Button
                        android:id="@+id/btnCubedSquareRoot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/secondary_operation_button"
                        android:text="3√"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        />

                    <Button
                        android:id="@+id/btnPi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/secondary_operation_button"
                        android:text="pi"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/operationsRow"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnClear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/secondary_operation_button"
                            android:text="AC"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnPositiveOrNevativeSign"
                            android:layout_weight="1"
                            android:background="@drawable/secondary_operation_button"
                            android:text="+/-"
                            android:textSize="20dp"
                            android:textColor="#fff" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnPercent"
                            android:layout_weight="1"
                            android:background="@drawable/secondary_operation_button"
                            android:text="%"
                            android:textSize="20dp"
                            android:textColor="#fff" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnDiv"
                            android:text="/"
                            android:layout_weight="1"
                            android:background="@drawable/first_operation_button"
                            android:textSize="20dp"
                            android:textColor="#fff"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/row1">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnSeven"
                            android:background="@drawable/number_button"
                            android:text="7"
                            android:layout_weight="1"
                            android:textSize="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnEight"
                            android:text="8"
                            android:background="@drawable/number_button"

                            android:layout_weight="1"
                            android:textSize="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnNine"
                            android:text="9"
                            android:background="@drawable/number_button"
                            android:layout_weight="1"
                            android:textSize="20dp"/>


                        <Button
                            android:id="@+id/btnMult"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/first_operation_button"
                            android:text="x"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/row2">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnFour"
                            android:text="4"
                            android:layout_weight="1"
                            android:background="@drawable/number_button"
                            android:textSize="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnFive"
                            android:background="@drawable/number_button"
                            android:text="5"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnSix"
                            android:text="6"
                            android:background="@drawable/number_button"
                            android:layout_weight="1"
                            android:textSize="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnMin"
                            android:text="_"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:background="@drawable/first_operation_button"
                            android:textColor="#fff"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/row3">



                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnOne"
                            android:text="1"
                            android:background="@drawable/number_button"
                            android:layout_weight="1"
                            android:textSize="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnTwo"
                            android:text="2"
                            android:background="@drawable/number_button"
                            android:layout_weight="1"
                            android:textSize="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnThree"
                            android:background="@drawable/number_button"
                            android:text="3"
                            android:layout_weight="1"
                            android:textSize="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btnPlus"
                            android:text="+"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:background="@drawable/first_operation_button"
                            android:textColor="#fff"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/row4">


                        <Button
                            android:id="@+id/btnZero"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/number_button"
                            android:text="0"
                            android:textSize="20dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/btnDec"
                            android:text="."
                            android:background="@drawable/number_button"
                            android:layout_weight="1.5"
                            android:textSize="20dp"/>



                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/btnEquals"
                            android:text="="
                            android:layout_weight="1.5"
                            android:textSize="20dp"
                            android:background="@drawable/first_operation_button"
                            android:textColor="#fff"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
